{
  "name": "TailyAI - Write hassel free emails using AI",
  "description": "Stop spending time thinking if your emails are convincing, well-written or formal. Just give the idea and let the TailyAI write the whole email",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://mail.google.com/*",
    "https://tailyai.herokuapp.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "externally_connectable": {
    "matches": ["*://tailyai.vercel.app/*"]
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
